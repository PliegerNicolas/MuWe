
  <div data-event="<%= event.id %>" class="event-wrapper swiper-slide muwe-shadow">

    <div class="event-photo">
      <% if event.location_photo.attachment %>
        <%= image_tag (event.location_photo), height: '71px', width: '71px', crop: "scale", format: "png", secure: true, class: "i-event-image" %>
      <% end %>

      <div class="event-status">
        <% if event.ongoing? %>
        <i class="fas fa-circle" style="color: #6BB382"></i>
        <% else %>
        <i class="fas fa-circle" style="color: #44AEE6"></i>
        <% end %>
        <span>
          <%= event.status.capitalize %>
        </span>
      </div>
    </div>

    <div class="event-infos">
      <div class="event-style">
        <%= event.music_style.style %>
      </div>
      <div class="participants">
        <i class="fas fa-users"></i>
        <%= event.participants.count %>/<%= event.max_players %>
      </div>
    </div>
    <div class="event-address">
      <i class="fa fa-map-marker-alt"></i>
      <%= event.address.nil? ? 'Lorem Street, 5 - City Lorem' : event.address %>
    </div>
    <div class="event-time">
      <span class="mr-2">
        <i class="fas fa-hourglass-start"></i>
        <%= event.start_time.to_s(:time) %>
      </span>
      <span>
        <i class="fas fa-hourglass-end"></i>
        <%= event.end_time.to_s(:time) %>
      </span>
    </div>
  </div>

