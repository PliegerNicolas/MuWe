<div class="container">
  <%= simple_form_for @event do |f| %>
  <div class="row">
    <div class="col-sm-8 title">
      <%= f.input :title, input_html:{ class: "no-border"} %>
    </div>


    <div class="col-sm-4 upload-btn-wrapper">
       <button class="btn">Upload a file</button>
      <%= f.input :location_photo, as: :file, input_html:{ placeholder: 'Localização', class: "no-border"} %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-8 description">
      <%= f.input :description, input_html:{ class: "no-border"} %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4 date-time">
      <div id='flat-booking-dates'>
        <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      </div>
    </div>
    <div class="col-sm-2 start-time">
      <%= f.input :start_time, collection: @times, default: Time.parse('18:00'), class_name: "no-border", input_html: { placeholder: '00:00', class: "no-border select2" } %>
    </div>
    <div class="col-sm-2 end-time">
      <%= f.input :end_time, collection: @times, default: Time.parse('18:00'), input_html: { placeholder: '00:00', class: "no-border select2" } %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8 address">
      <div class="address">
        <%= f.input :address, input_html: { placeholder: 'Include a place or address', class: "no-border" } %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4 music-style">
      <%= f.association :music_style, input_html: { placeholder: 'pick a music style', class: "no-border select2"}, selected: 1 %>
    </div>
    <div class="col-sm-4 max-players">
      <%= f.input :max_players, collection: 2..16, selected: Date.today, input_html: { class: "no-border select2" } %>
    </div>
  </div>
</div>
<div class="container">
  <%= f.submit %>
</div>
<% end %>
</div>


