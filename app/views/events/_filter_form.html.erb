<span class="btn-filter-close"><i class="fas fa-times-circle"></i></span>
  <%= simple_form_for :filter, url: search_path, method: :get, remote: true do |f| %>
    <%= f.input :periode, collection: ['Yesterday','Today', 'Tomorrow', '7 days from now', '14 days from now'], selected: 'Today' %>
    <%= f.input :start_time, collection: time_array  %>
    <%= f.input :end_time, collection: time_array  %>
    <%= f.input :max_players, collection: 1..20 %>
    <%= f.input :status, collection: ['Ongoing', 'Planned', 'Finished'] %>
    <%= f.submit "Filter" %>
    <!-- day, time, participants, status -->
  <% end %>
