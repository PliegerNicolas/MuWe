<div class="container">
  <div class="row">
    <div class="col-10 m-auto">
      <div class="form-container sign-in" style="margin-top: 50px;">
        <div class="form-wrapper">
          <h2>Login</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Login", class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>
          <br>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-link btn-block btn-sm text-muted' %>
        </div>
        <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-dark btn-signup' %>
        <%#= render "devise/shared/links" %>
      </div>

    </div>
  </div>

</div>