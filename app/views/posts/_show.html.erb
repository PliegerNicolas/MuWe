<div class="post" id="<%= post.id %>">
  <%= embed_link(post)  %>
  <p class="description"><%= post.description %></p>
  <%= link_to "Edit", edit_profile_post_path(post.user.profile, post.id) %>
  <%= link_to "Delete", profile_post_path(post.user.profile, post.id), method: :delete, remote: true %>
</div>
