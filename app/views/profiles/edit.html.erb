<div class="container">
  <div class="row">
    <div class="col-12 bg-white">
      <h2>pick the instruments you play</h2>

      <div class="instrument-wrapper">
        <%= form_tag profile_instruments_path(@profile), method: 'post', remote: true, class: 'form-inline' do %>
          <div id="instruments-list" data-list="<%= Instrument.all.pluck(:id, :name).to_json %>">
            <%= select :instrument, nil, Instrument.all.collect { |i| [i.name, i.id] }, { include_blank: true }, class: 'select2' %>
            <%= submit_tag 'Add instrument', class: 'btn btn-sm btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-12">
        <div class="profile-heading">
          <div>
            <% if @profile.profile_photo.attachment %>
            <%= image_tag @profile.profile_photo, height: '120px', width: '120px', crop: "scale", gravity: "faces", format: "png", secure: true, class: "muwe-avatar-large"%>
            <% end %>
          </div>
          <h2>Edit <%= @profile.user.first_name %>'s profile</h2>
        </div>
      </div>
      <div class="col-6">
        <%= simple_form_for @profile do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">

            <%= f.fields_for current_user do |user_form| %>
                <%= user_form.input :email, required: true, autofocus: true %>
                <%= user_form.input :first_name, required: true %>
            <% end %>
              <%= f.input :last_name %>
              <%= f.input :birth_date, as: :date, start_year: Date.today.year - 90, end_year: Date.today.year - 10 %>
              <%= f.input :bio %>
              <%= f.input :profile_photo, as: :file %>
          </div>


          <div class="form-actions">
            <%= f.button :submit, "Update", class: 'btn-primary' %>
            <%= link_to "Back", :back, class: 'btn btn-outline-secondary float-right' %>
          </div>
        <% end %>
      </div>
      <div class="col-3 offset-3">
        <h4>Cancel my account</h4>
        <p class="text-justify">Unhappy? Lorem ipsum dolor sit amet consectetur adipisicing elit. Necessitatibus dolorem ab animi doloremque corrupti quidem architecto dicta, magnam alias consequatur facere nihil consequuntur distinctio aut nemo natus doloribus quam ratione. Dignissimos provident error in veniam libero quam officiis nisi nihil!</p>
        <p>&nbsp;</p>
        <p><%= link_to "Cancel my account", registration_path(User), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-outline-danger' %></p>
      </div>
    </div>
  </div>
</div>
