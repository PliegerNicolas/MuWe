<div class="profile">
  <div class="row">
    <div class="col-4">

      <div class="profile-general box">

        <div class="left">
          <div class="profile-photo">
            <%= image_tag @profile.profile_photo %>
          </div>
        </div>
        <div class="right">
          <div>
            <div class="profile-name">
              <%= @profile.user.full_name %>
            </div>
            <div class="profile-city">
              <i class="fas fa-map-marker-alt"></i>
              <%= @profile.city %>, Portugal
            </div>
          </div>
          <div class="stats">
            <div class="comments">
              <div class="number">6535</div>
              <div>Comment</div>
            </div>
            <div class="followers">
              <div class="number">189</div>
              <div>Followers</div>
            </div>
            <div class="following">
              <div class="number">123</div>
              <div>Following</div>
            </div>
          </div>
        </div>

      </div>

    </div>
    <div class="col-8">

      <p>
        <%= @profile.birth_date %>
      </p>
      <p>
        <%= @profile.city %>
      </p>
      <p>
        <%= @profile.bio %>
      </p>

    </div>
  </div>
</div>
